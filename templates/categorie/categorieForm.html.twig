{% extends 'layout.html.twig' %}

{% block title %}
    catégories 
{% endblock %}

{% block content %}
<h1>Ajout d'une catégories</h1>

    {{ form(formCategorie) }}

    <table class="table text-center">
    <thead class="thead-dark">
        <tr>
            <th>Categorie</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        {% for categorie in categories %}
        <tr>
            <td>{{ categorie.nom }}</td>
            <td>
                <a href="{{ path('app_categorie_update', {slug: categorie.slug}) }}"> <i class="fas fa-edit mx-1 text-center text-success" title="editer"></i></a>
                <a href="" onClick="return confirm('êtes vous sûr de vouloir supprimer la categorie ?')"><i class="fas fa-trash mx-1 text-center text-danger" title="supprimer"></i></a>
                <a href=""> <i class="fas fa-eye mx-1 text-center" title="voir"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
